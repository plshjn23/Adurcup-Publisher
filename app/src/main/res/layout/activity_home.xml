<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/RL_Top"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="40dp"
        android:background="#009688">

        <TextView
            android:id="@+id/tv_TotalCredits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="TOTAL ADURCUP CREDITS RECIEVED" />


        <TextView
            android:id="@+id/tvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_TotalCredits"
            android:gravity="center"
            android:text="0"
            android:textColor="#fff"
            android:textSize="70sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_INR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvv"
            android:gravity="center"
            android:text="INR"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/credit_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Total of INR 3,400 can be recieved this month."
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Panel1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/RL_Top">

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#669933" />

        <TextView
            android:id="@+id/uploadingtask"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/icon_1"
            android:gravity="center_vertical"
            android:text="Total Reporting Images" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:progressDrawable="@drawable/circle_progress_bar" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/Panel1"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:id="@+id/Panel2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/Panel1">

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#ff6600" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/icon_2"
            android:gravity="center_vertical"
            android:text="Image of First Bill"/>


        <TextView
            android:id="@+id/tvmorning"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:gravity="center_vertical"
            android:text="Done!"
            android:textColor="#006699" />

        <ImageView
            android:id="@+id/morning_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/morning"
            android:padding="14dp"
            android:src="@drawable/camera_icon" />

        <ProgressBar
            android:id="@+id/progressBarFirstBill"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:progressDrawable="@drawable/circle_progress_bar" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/Panel2"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:id="@+id/Panel3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/Panel2">

        <ImageView
            android:id="@+id/icon_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#0099cc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/icon_3"
            android:gravity="center_vertical"
            android:text="Image of Last Bill" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:gravity="center_vertical"
            android:text="Done!"
            android:textColor="#cc3333" />


        <ImageView
            android:id="@+id/imageViewevening"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/morning"
            android:padding="14dp"
            android:src="@drawable/camera_icon" />

        <ProgressBar
            android:id="@+id/progressBarLastBill"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:progressDrawable="@drawable/circle_progress_bar" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/Panel3"
        android:background="#f5f5f5" />

    <ImageView
        android:id="@+id/camera123"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/Panel1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners"
        android:padding="14dp"
        android:src="@drawable/camera_icon" />

    <ImageView
        android:id="@+id/imgview123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Panel3"
        android:layout_toLeftOf="@+id/camera123"
        android:layout_toStartOf="@+id/camera123" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Panel3"
        android:layout_toEndOf="@+id/imgview123"
        android:layout_toRightOf="@+id/imgview123"
        android:text="New Text" />

    <Button
        android:id="@+id/buttonlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#009688"
        android:padding="10dp"
        android:text="Log Out"
        android:textColor="#ffffff" />

</RelativeLayout>